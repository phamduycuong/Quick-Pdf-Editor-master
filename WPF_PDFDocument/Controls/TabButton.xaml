<UserControl x:Class="WPF_PDFDocument.Controls.TabButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_PDFDocument.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="80">
    <Grid>
        <Button Name="Button" Background="Transparent" BorderThickness="0" MouseDown="Button_MouseDown">
            <StackPanel Width="80" Height="65">
                <Image Name="Icon" MouseEnter="Icon_MouseEnter" Height="40" Width="40"></Image>
                <Label Name="label" FontSize="12" VerticalAlignment="Bottom" Content="N/A" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="80"></Label>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
